{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The template to create an ECS Service with ALB and required networking.",
  "Parameters": {
    "ECSClusterName": {
      "Type": "String",
      "Default": "my-first-cluster"
    },
    "ECSServiceName": {
      "Type": "String",
      "Default": "webapp"
    },
    "VpcID": {
      "Type": "String",
      "Description": "VPC ID for the ECS Service and Load Balancer"
    },
    "SubnetIDs": {
      "Type": "CommaDelimitedList",
      "Description": "Subnets for the ECS Service and Load Balancer"
    }
  },
  "Resources": {
    "ECSLoadBalancerSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "VpcId": { "Ref": "VpcID" },
        "GroupDescription": "Security Group for ALB",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": 80,
            "ToPort": 80,
            "CidrIp": "0.0.0.0/0"
          }
        ]
      }
    },
    "ApplicationLoadBalancer": {
      "Type": "AWS::ElasticLoadBalancingV2::LoadBalancer",
      "Properties": {
        "Subnets": { "Ref": "SubnetIDs" },
        "SecurityGroups": [{ "Ref": "ECSLoadBalancerSecurityGroup" }],
        "Scheme": "internet-facing"
      }
    },
    "ALBTargetGroup": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Properties": {
        "VpcId": { "Ref": "VpcID" },
        "Port": 5000,
        "Protocol": "HTTP",
        "TargetType": "ip",
        "HealthCheckProtocol": "HTTP",
        "HealthCheckPath": "/",
        "HealthCheckIntervalSeconds": 30,
        "HealthCheckTimeoutSeconds": 5,
        "HealthyThresholdCount": 3,
        "UnhealthyThresholdCount": 3,
        "Matcher": {
          "HttpCode": "200"
        }
      }
    },
    "ALBListener": {
      "Type": "AWS::ElasticLoadBalancingV2::Listener",
      "Properties": {
        "LoadBalancerArn": { "Ref": "ApplicationLoadBalancer" },
        "Port": 80,
        "Protocol": "HTTP",
        "DefaultActions": [
          {
            "Type": "forward",
            "TargetGroupArn": { "Ref": "ALBTargetGroup" }
          }
        ]
      }
    },
    "ECSService": {
      "Type": "AWS::ECS::Service",
      "Properties": {
        "Cluster": { "Ref": "ECSClusterName" },
        "ServiceName": { "Ref": "ECSServiceName" },
        "TaskDefinition": "arn:aws:ecs:ap-southeast-2:211125652748:task-definition/ecs-task-receipt-manager:4",
        "DesiredCount": 1,
        "LoadBalancers": [
          {
            "ContainerName": "receipt-manager",
            "ContainerPort": 5000,
            "TargetGroupArn": { "Ref": "ALBTargetGroup" }
          }
        ],
        "NetworkConfiguration": {
          "AwsvpcConfiguration": {
            "AssignPublicIp": "ENABLED",
            "SecurityGroups": [{ "Ref": "ECSLoadBalancerSecurityGroup" }],
            "Subnets": { "Ref": "SubnetIDs" }
          }
        },
        "PlatformVersion": "LATEST",
        "LaunchType": "FARGATE"
      }
    }
  },
  "Outputs": {
    "LoadBalancerDNS": {
      "Description": "The DNS name of the load balancer",
      "Value": { "Fn::GetAtt": ["ApplicationLoadBalancer", "DNSName"] }
    }
  }
}
