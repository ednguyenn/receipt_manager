{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "The template used to create an ECS Service from the ECS Console.",
    "Parameters": {
      "ECSClusterName": {
        "Type": "String",
        "Default": "my-first-cluster"
      },
      "ECSServiceName": {
        "Type": "String",
        "Default": "webapp"
      },
      "SecurityGroupIDs": {
        "Type": "CommaDelimitedList",
        "Default": "sg-0b7f0f71f643e0221"
      },
      "SubnetIDs": {
        "Type": "CommaDelimitedList",
        "Default": "subnet-090e88f0d541ac21d,subnet-01bb6a97d29ecf083,subnet-03b7be7c8ddb57f0e"
      },
      "VpcID": {
        "Type": "String",
        "Default": "vpc-0f501f8639f96856f"
      },
      "LoadBalancerName": {
        "Type": "String",
        "Default": "alb-receipt-manager"
      }
    },
    "Resources": {
      "ECSService": {
        "Type": "AWS::ECS::Service",
        "Properties": {
          "Cluster": "my-first-cluster",
          "CapacityProviderStrategy": [
            {
              "CapacityProvider": "FARGATE",
              "Base": 0,
              "Weight": 1
            }
          ],
          "TaskDefinition": "arn:aws:ecs:ap-southeast-2:211125652748:task-definition/ecs-task-receipt-manager:4",
          "ServiceName": "webapp",
          "SchedulingStrategy": "REPLICA",
          "DesiredCount": 1,
          "LoadBalancers": [
            {
              "ContainerName": "receipt-manager",
              "ContainerPort": 5000,
              "LoadBalancerName": {
                "Ref": "AWS::NoValue"
              },
              "TargetGroupArn": "arn:aws:elasticloadbalancing:ap-southeast-2:211125652748:targetgroup/receipt-manager/a87759f4cf8edc94"
            }
          ],
          "HealthCheckGracePeriodSeconds": "0",
          "NetworkConfiguration": {
            "AwsvpcConfiguration": {
              "AssignPublicIp": "ENABLED",
              "SecurityGroups": {
                "Ref": "SecurityGroupIDs"
              },
              "Subnets": {
                "Ref": "SubnetIDs"
              }
            }
          },
          "PlatformVersion": "LATEST",
          "DeploymentConfiguration": {
            "MaximumPercent": 200,
            "MinimumHealthyPercent": 100,
            "DeploymentCircuitBreaker": {
              "Enable": true,
              "Rollback": true
            }
          },
          "DeploymentController": {
            "Type": "ECS"
          },
          "ServiceConnectConfiguration": {
            "Enabled": false
          },
          "Tags": [],
          "EnableECSManagedTags": true
        }
      }
    },
    "Outputs": {
      "ClusterName": {
        "Description": "The cluster used to create the service.",
        "Value": {
          "Ref": "ECSClusterName"
        }
      },
      "ECSService": {
        "Description": "The created service.",
        "Value": {
          "Ref": "ECSService"
        }
      }
    }
  }
